<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Email Input -->
    <EditText
        android:id="@+id/emialInputSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Password Input -->
    <EditText
        android:id="@+id/passwordInputSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Password Again -->
    <EditText
        android:id="@+id/passwordAgainInputSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password Again"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Signup Button -->
    <Button
        android:id="@+id/signupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="16dp"/>

    <!-- Signup with Google Button -->
    <Button
        android:id="@+id/signupWithGoogleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup with Google"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/primary"
        android:elevation="4dp"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="24dp"/>

    <!-- Navigate Login -->
    <TextView
        android:id="@+id/navigateLoginFromSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you already have an account? Let's login"
        android:textColor="@color/info"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>